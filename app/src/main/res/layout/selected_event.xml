<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="SPORT"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="22dp"
            android:textColor="#14610B"
            android:layout_marginBottom="10dp"
            android:id="@+id/sports"
            ></TextView>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:padding="20dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal|center_vertical">


            <ImageView
                android:layout_height="90dp"
                android:layout_weight="50"

                android:background="@drawable/common_google_signin_btn_icon_dark_normal"
                android:foregroundGravity="left"
                android:layout_gravity="center"
                android:gravity="center_horizontal|center_vertical"
                android:layout_width="10dp"
                />

            <TextView
                android:layout_weight="50"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:text="Tim1"
                android:textStyle="bold"
                android:gravity="center_vertical|start"
                android:textSize="18dp"
                android:padding="20dp"
                android:textColor="#07114C"
                android:id="@+id/team1"
                android:layout_width="10dp"></TextView>
        </LinearLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="VS"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="15dp"
            android:textStyle="bold"
            android:padding="20dp"

            ></TextView>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:padding="20dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal|center_vertical">


            <ImageView
                android:layout_height="90dp"
                android:layout_weight="50"

                android:background="@drawable/common_google_signin_btn_icon_dark_normal"
                android:foregroundGravity="left"
                android:layout_gravity="center"
                android:gravity="center_horizontal|center_vertical"
                android:layout_width="10dp"
                />

            <TextView
                android:id="@+id/team2"
                android:layout_width="10dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_weight="50"
                android:gravity="center_vertical|start"
                android:padding="20dp"
                android:text="Tim2"
                android:textSize="18dp"
                android:textColor="#050C35"
                android:textStyle="bold"></TextView>
        </LinearLayout>


        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal">


            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="10dp"
                    android:text="Start time:"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/timeStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="10dp"
                    android:text="2222"
                    android:textColor="#4CAF50"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

            </LinearLayout>
            <View
                android:id="@+id/divider9"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:orientation="vertical"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="10dp"
                    android:text="End time:"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/timeEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="10dp"
                    android:text="2222"
                    android:textColor="#F44336"
                    android:textSize="18dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/divider6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:weightSum="100"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="50"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal"

                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    android:text="Address:"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ADDRESS"
                    android:id="@+id/address"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#050C35"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center_horizontal"/>
            </LinearLayout>

            <View
                android:id="@+id/divider12"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="?android:attr/listDivider" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center_horizontal|center_vertical">
                <Button
                    android:id="@+id/GetMapLocation"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:text="Get Location"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    />
            </LinearLayout>




        </LinearLayout>
        <View
            android:id="@+id/divider7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="100"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center_horizontal|center_vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Available seats: "
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:gravity="center_horizontal|center_vertical"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="10"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textColor="#050C35"
                    android:textSize="18dp"
                    android:id="@+id/available_seats"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal|center_vertical"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Price: "
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:gravity="center_horizontal|center_vertical"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="10.000 RSD"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textColor="#050C35"
                    android:textSize="18dp"
                    android:id="@+id/price"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal|center_vertical"/>

            </LinearLayout>
            <View
                android:id="@+id/divider16"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="?android:attr/listDivider" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:layout_gravity="center"
                android:padding="10dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">
                <Button
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:text="book tickets"
                    android:textStyle="bold"
                    android:id="@+id/book_tickets"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal|center_vertical"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="or"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:gravity="center_horizontal|center_vertical"
                    />
                <Button
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:text="Cancel all"
                    android:textStyle="bold"
                    android:id="@+id/cancel_tickets"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal|center_vertical"/>

            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:id="@+id/divider95"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />
        </LinearLayout>
        <TextView
            android:id="@+id/errorMessage"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"/>


    </LinearLayout>

</ScrollView>
